"\
uniform mat4 Projection;\n\
uniform mat3 WorldViewTransformation;\n\
\n\
attribute vec3 Color;\n\
attribute vec2 Position;\n\
\n\
varying vec4 DestinationColor;\n\
\n\
void main(void) {\n\
    vec3 ViewPosition = WorldViewTransformation * vec3(Position, 1);\n\
    gl_Position = Projection * vec4(ViewPosition.xy, 0, 1);\n\
    DestinationColor = vec4(Color, 1);\n\
}\n\
"
